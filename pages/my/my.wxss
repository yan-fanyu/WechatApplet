.header {
  height: 400rpx;
  background: #f4c903;
  align-items: center;
}

.login_btn {
  top: 120rpx
}

.login_out {
  font-size: 33rpx;
  color: gray;
  margin-top: 20rpx;
}

.root {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.touxiang {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.right_arrow{
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.iteam{
  display: flex;
  padding: 20rpx;
  background: white;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}

.jiantou{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 9px;
}

.button{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}

.button::after{
  border: none;
  border-radius: 0;
}

